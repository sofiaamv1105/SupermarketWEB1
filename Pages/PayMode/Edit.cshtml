@page
@model SupermarketWEB.Pages.PayMode.EditModel

<div class="container mt-4">
    <h2 class="text-center">Edit Pay Mode</h2>
    <form method="post">
        <input type="hidden" asp-for="PayMode.Id" />
        <div class="form-group">
            <label asp-for="PayMode.Name" class="font-weight-bold"></label>
            <input asp-for="PayMode.Name" class="form-control" />
            <span asp-validation-for="PayMode.Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PayMode.Description" class="font-weight-bold"></label>
            <input asp-for="PayMode.Description" class="form-control" />
            <span asp-validation-for="PayMode.Description" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary mt-2">Save</button>
        <a asp-page="Index" class="btn btn-secondary mt-2">Back to List</a>
    </form>
</div>

